<html>
  <head>
    <meta charset="UTF-8">
    <title>Autokrausser</title>
    <style>
      body {
	  text-align: center;
      }
      div {
	  display: inline-block;
      }
      span {
	  font-size: 5em;
      }
    </style>
    <script>
      function autoKrausser() {
	  document.getElementById("cool").innerHTML = (100 - Math.round(30 * Math.random())) + "%";
      }
      function autoCashiner() {
	  document.getElementById("cool").innerHTML = (Math.random() > .25 ? 100 - Math.round(10 * Math.random()) : 50 - Math.round(20 * Math.random())) + "%";
      }
      function genGrade() {
	  var obj = document.getElementById("select");
	  switch (obj.options[obj.selectedIndex].text) {
	  case "Mr. Kraus":
	      autoKrausser();
	      break;
	  case "Mrs. Cashin":
	      autoCashiner();
	      break;
	  default:
	      document.getElementById("cool").innerHTML = "Teacher: " + obj.options[obj.selectedIndex].text;
	  }
    </script>
  </head>
  <body>
    <h1>Autokrausser</h1>
    <div>
      <p>Please select teacher:</p>
    </div>
    <div>
    <select id="select">
      <option>Mr. Kraus</option>
      <option>Mrs. Cashin</option>
    </select>
    </div>
    <div>
      <button onclick="genGrade()">Generate Grade</button>
    </div>
    <br />
    <span id="cool"></span>
  </body>
</html>
